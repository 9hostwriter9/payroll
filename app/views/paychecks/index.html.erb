<h1>Listing paychecks</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Schedule</th>
      <th>Units</th>
      <th>Date</th>
      <th>Gross</th>
      <th>Css</th>
      <th>Cmc</th>
      <th>Net</th>
      <th>Fit</th>
      <th>Ess</th>
      <th>Emc</th>
      <th>Check no</th>
      <th>Issued</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @paychecks.each do |paycheck| %>
      <tr>
        <td><%= Employee.find(paycheck.employee_id).full_name %></td>
        <td><%= Schedule.find(paycheck.schedule_id).code %></td>
        <td><%= paycheck.units %></td>
        <td><%= paycheck.date %></td>
        <td><%= number_to_currency(paycheck.gross) %></td>
        <td><%= number_to_currency(paycheck.css) %></td>
        <td><%= number_to_currency(paycheck.cmc) %></td>
        <td><%= number_to_currency(paycheck.net) %></td>
        <td><%= number_to_currency(paycheck.fit) %></td>
        <td><%= number_to_currency(paycheck.ess) %></td>
        <td><%= number_to_currency(paycheck.emc) %></td>
        <td><%= paycheck.check_no %></td>
        <td><%= paycheck.issued %></td>
        <td><%= link_to 'Show', paycheck %></td>
        <td><%= link_to 'Edit', edit_paycheck_path(paycheck) %></td>
        <td><%= link_to 'Destroy', paycheck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Paycheck', new_paycheck_path %>
