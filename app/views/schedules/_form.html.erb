<%= form_for(@schedule) do |f| %>
  <% if @schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
      <% @schedule.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :code %><br>
    <%= f.text_field :code, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_field :description, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :period %><br>
    <%= f.select :period, [["WEEKLY", "WEEKLY"], ["BI-WEEKLY", "BI-WEEKLY"], ["SEMI-MONTHLY", "SEMI-MONTHLY"], ["MONTHLY", "MONTHLY"]], :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :factor %><br>
    <%= f.text_field :factor, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rate %><br>
    <%= f.text_field :rate, :class => "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Save Schedule", :class => "btn btn-success" %>
  </div>
<% end %>
